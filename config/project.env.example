# Copy this file to config/project.env and edit values for your environment.

# ========= Build ISO =========
# Local Debian installer ISO path (absolute or project-relative)
DEBIAN_ISO_PATH=local/iso/debian-12.11.0-amd64-DVD-1.iso

# Input config files
PRESEED_CFG=config/preseed.cfg
GRUB_CFG=config/grub.cfg

# Build output
BUILD_DIR=build
ISOFILES_DIR_NAME=isofiles
OUTPUT_ISO_NAME=auto-debian.iso

# Build dependencies checked/installed by script
REQUIRED_PACKAGES="isolinux syslinux"

# ISO internal target paths
ISO_GRUB_TARGET_PATH=boot/grub/grub.cfg
ISO_INSTALL_DIR=install.amd
ISO_INITRD_GZ_PATH=install.amd/initrd.gz
ISO_INITRD_PATH=install.amd/initrd
ISO_MD5_FILE=md5sum.txt

# xorriso / mkisofs parameters
XORRISO_VOLUME_ID=CUSTOM_ISO
XORRISO_ISOLINUX_BIN=isolinux/isolinux.bin
XORRISO_BOOT_CAT=isolinux/boot.cat
XORRISO_EFI_IMG=boot/grub/efi.img
ISOHYBRID_MBR=/usr/lib/ISOLINUX/isohdpfx.bin

# ========= KVM / libvirt test =========
BUILD_SCRIPT=scripts/build_iso.sh
VM_NAME=preseedtest01
LIBVIRT_IMAGE_DIR=/var/lib/libvirt/images
SYSTEM_DISK_NAME=preseed_system.qcow2
DATA_DISK_NAME=preseed_data.qcow2
SYSTEM_DISK_SIZE_GB=50
DATA_DISK_SIZE_GB=200
VM_MEMORY_MB=2048
VM_VCPUS=2
OS_VARIANT=debian11
BRIDGE_NAME=virbr0
SPICE_PASSWORD=000000

# ========= HTTP preseed service =========
PRESEED_FILE_PATH=config/preseed_internal.cfg
PRESEED_FALLBACK_PATH=config/preseed_internal.example.cfg
PRESEED_SERVER_PORT=8088
